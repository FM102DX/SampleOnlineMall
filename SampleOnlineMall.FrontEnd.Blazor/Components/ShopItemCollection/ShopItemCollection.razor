
@using SampleOnlineMall.FrontEnd.Blazor.Components
@using SampleOnlineMall.FrontEnd.Blazor.Components.ShopItemCollection
@using SampleOnlineMall.FrontEnd.Blazor.Components.Paginator

<div class="ShopItemCollection">

    @{
        int counter = 1;
        int step = 3;
        int totalCount = ItemsDisplayed.Count;
        int stepCount= 0;
        //@UsageCase== ShopItemCollectionUsageCaseEnum.MainPageAppearamce
        // || @UsageCase== ShopItemCollectionUsageCaseEnum.MainBarSearch
    }

    @if (@UsageCase == ShopItemCollectionUsageCaseEnum.MainPageAppearamce)
    {
        if (ItemsTotalCount == 0) { <span>No items here </span>}
    }
    else
    {
        if (ItemsTotalCount == 0)
        {
            <span>No items found </span>
        }
    }
        
        @foreach(var sku in ItemsDisplayed)
        {
            <div class="SkuCard skuUnitBase" id="@counter">

                <div class="SkuCard-image SkuCard-element">
                    <img class="SkuCardPic" src="@sku.FacePicture.MediumPictureFullPath" />
                </div>
                <div class="SkuCard-productName SkuCard-element">
                    <a href="@Manager.GetItemPageFullAddress(@sku.Id)">
                       @sku.Name
                   </a>
                </div>
            </div>
            counter++;
            stepCount++;
        }

        <div class="PaginationControlSeparator"></div>
        <Paginator></Paginator>
</div>